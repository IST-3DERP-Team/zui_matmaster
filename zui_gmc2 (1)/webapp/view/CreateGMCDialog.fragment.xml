<core:FragmentDefinition
		xmlns="sap.m"
        xmlns:f="sap.ui.layout.form"
		xmlns:core="sap.ui.core"
        xmlns:uit="sap.ui.table"
        id="fragment-1" 
        fragmentName="fragment1">
    <Dialog contentWidth="805px"
        contentHeight="500px"
        title="Material Classifications"
        resizable="true"
        draggable="true"
        afterOpen="afterOpenCreateGMC">
        <beginButton>
			<Button type="Emphasized" text="Save" press=".onCreateGMCSave" width="4rem" />
		</beginButton>
        <endButton>
			<Button text="Cancel" press=".onCreateGMCCancel"/>
		</endButton>
        <uit:Table id="classTab"
            rows="{class>/results}"
            selectionMode="None"
            visibleRowCount="{/rowCount}"
            paste="onPaste">
            <uit:columns>
                <uit:Column width="10rem">
                    <Label text="Classification" />
                    <uit:template>
                        <Text text="{class>Mattypcls}" wrapping="false" />
                    </uit:template>
                </uit:Column>
                <uit:Column width="10rem">
                    <Label text="Attribute" />
                    <uit:template>
                        <Input id="iptAttribcd"
                            type="Text"
                            enabled="true"
                            value="{class>Attribcd}"
                            change="onAtrribcdChange"
                            showValueHelp="true"
                            valueHelpRequest="handleValueHelp"
                            showSuggestion="true" 
                            suggestionItems="{path:'/MatTypeAttribSet', templateShareable:false}">
                            <suggestionItems>
                                <core:Item text="{Attribcd}" key="{Attribcd}" />
                            </suggestionItems>
                        </Input>
                    </uit:template>
                </uit:Column>
                <uit:Column width="15rem">
                    <Label text="Description (EN)" />
                    <uit:template>
                        <Input value="{class>Descen}" enabled="true" />
                    </uit:template>
                </uit:Column>
                <uit:Column width="15rem">
                    <Label text="Description (CN)" />
                    <uit:template>
                        <Input value="{class>Desczh}" enabled="true" />
                    </uit:template>
                </uit:Column>                
            </uit:columns>
        </uit:Table>    
    </Dialog>
</core:FragmentDefinition>
