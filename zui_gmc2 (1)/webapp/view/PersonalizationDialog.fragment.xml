<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <P13nDialog ok="onColumnPropConfirm" cancel="onColumnPropCancel"
                title="Column Properties"
                class="sapUiSizeCompact" contentWidth="500px">
        <panels>
            <P13nColumnsPanel changeColumnsItems="onChangeColumnsItems"
                              items="{path: '/Items'}"
                              columnsItems="{path: '/ColumnsItems'}">
                <items>
                    <P13nItem columnKey="{columnKey}" text="{text}"/>
                </items>
                <columnsItems>
                    <P13nColumnsItem columnKey="{columnKey}" index="{index}" visible="{visible}"/>
                </columnsItems>
            </P13nColumnsPanel>
        </panels>
    </P13nDialog>
</core:FragmentDefinition>