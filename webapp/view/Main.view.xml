<mvc:View controllerName="zuimatmaster.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    height="100%"
    xmlns:uiL="sap.ui.layout"
    xmlns:uiT="sap.ui.table"> 
    <Page id="page" enableScrolling="false" class="sapUiNoContentPadding" showHeader="false">
        <content>
            <uiL:FixFlex id="fixFlexMM" class="fixFlexFixedSize sidePadding" fixContentSize="50%">
                <uiL:fixContent>
                    <uiT:Table id="matMasterTab"
                            rows="{matMaster>/results}"
                            visibleRowCountMode="Auto"
                            showColumnVisibilityMenu="true"
                            enableColumnFreeze="true"
                            enableCellFilter="true"
                            selectionMode="MultiToggle"
                            cellClick="onCellClickMM"
                            sort="onSorted">
                        <uiT:rowSettingsTemplate>
                            <uiT:RowSettings highlight="{= ${matMaster>Edited} === true ? 'Warning' : null}" />
                        </uiT:rowSettingsTemplate>
                        <uiT:extension>
                            <Toolbar>
                                <ToolbarSpacer/>
                                <SearchField
                                    id="searchFieldMM"
                                    placeholder="Filter"
                                    value=""
                                    search="filterGlobally"
                                    width="15rem"/>
                                <ToolbarSeparator/>
                                <Button id="btnAddMM" 
                                    icon="sap-icon://add"
                                    press=".onCreateMM"
                                    visible="true"/>
                                <Button id="btnEditMM" 
                                    icon="sap-icon://edit"
                                    press="onEditMM"
                                    tooltip="Edit"
                                    visible="true"/>
                                <Button id="btnSaveMM" 
                                    icon="sap-icon://save"
                                    press=".onSave('matMaster')" 
                                    visible="false" />
                                <Button id="btnCancelMM" 
                                    icon="sap-icon://sys-cancel"
                                    press="onCancelMM" 
                                    visible="false" />                                        
                                <Button id="btnDeleteMM" 
                                    icon="sap-icon://delete"
                                    press="onDeleteMM"
                                    visible="true"/>
                                <Button id="btnRefreshMM" 
                                    icon="sap-icon://refresh"
                                    press="onRefreshMM"
                                    visible="true"/> 
                                <Button id="btnSortMM" 
                                    icon="sap-icon://sort"
                                    press="onColSort"
                                    visible="true" />
                                <Button id="btnFilterMM" 
                                    icon="sap-icon://filter"
                                    press="onColFilter"
                                    visible="true" />
                                <Button id="btnFullScreenHdr" 
                                    icon="sap-icon://full-screen"
                                    press="onTableResize('Hdr','Max')"
                                    visible="true" />
                                <Button id="btnExitFullScreenHdr" 
                                    icon="sap-icon://exit-full-screen"
                                    press="onTableResize('Hdr','Min')"
                                    visible="false" />
                                <Button id="btnColPropMM" 
                                    icon="sap-icon://table-column"
                                    press="onColumnProp"
                                    tooltip="Columns"
                                    visible="true" />
                            </Toolbar>
                        </uiT:extension> 
                    </uiT:Table>    
                </uiL:fixContent> 
                <uiL:flexContent>
                    <IconTabBar id="itbDetail"
                        expanded="{device>/isNoPhone}" 
                        expandable="false" 
                        class="tabColor" 
                        select="onSelectTab"
                        headerBackgroundDesign="Transparent" 
                        stretchContentHeight="true" 
                        applyContentPadding="false">
                        <items>
                            <IconTabFilter text="Attributes">
                                <uiT:Table id="attributesTab"
                                    rows="{attributes>/results}"
                                    visibleRowCountMode="Auto"
                                    showColumnVisibilityMenu="true"
                                    enableColumnFreeze="true"
                                    enableCellFilter="true"
                                    selectionMode="Single"
                                    sort="onSorted">
                                    <uiT:extension>
                                        <Toolbar>
                                            <Text text="Material No: {ui>/activeMaterialNo}" class="selHdrKeyFontStyle" />
                                            <ToolbarSpacer/>
                                            <SearchField
                                                id="searchFieldAttr"
                                                placeholder="Filter"
                                                value=""
                                                search="filterGlobally"
                                                width="15rem"/>
                                            <ToolbarSeparator/>
                                            <Button id="btnRefreshAttr" 
                                                icon="sap-icon://refresh"
                                                press=".onRefreshAttr"
                                                visible="true" />
                                            <Button id="btnSortAttr" 
                                                icon="sap-icon://sort"
                                                press=".onColSort"
                                                visible="true" />
                                            <Button id="btnFilterAttr" 
                                                icon="sap-icon://filter"
                                                press=".onColFilter"
                                                visible="true" />
                                            <Button id="btnFullScreenAttr" 
                                                icon="sap-icon://full-screen"
                                                press="onTableResize('Attr','Max')"
                                                visible="true" />
                                            <Button id="btnExitFullScreenAttr" 
                                                icon="sap-icon://exit-full-screen"
                                                press="onTableResize('Attr','Min')"
                                                visible="false" />
                                            <Button id="btnColPropAttr" 
                                                icon="sap-icon://table-column"
                                                press="onColumnProp"
                                                tooltip="Columns"
                                                visible="true" />                                                
                                        </Toolbar>
                                    </uiT:extension>
                                </uiT:Table>
                            </IconTabFilter>
                            <IconTabFilter text="Batch">
                                <uiT:Table id="batchTab"
                                    rows="{batch>/results}"
                                    visibleRowCountMode="Auto"
                                    showColumnVisibilityMenu="true"
                                    enableColumnFreeze="true"
                                    enableCellFilter="true"
                                    selectionMode="Single"
                                    sort="onSorted">
                                    <uiT:extension>
                                        <Toolbar>
                                            <Text text="Material No: {ui>/activeMaterialNo}" class="selHdrKeyFontStyle" />
                                            <ToolbarSpacer/>
                                            <SearchField
                                                id="searchFieldBatch"
                                                placeholder="Filter"
                                                value=""
                                                search="filterGlobally"
                                                width="15rem"/>
                                            <ToolbarSeparator/>
                                            <Button id="btnRefreshBatch" 
                                                icon="sap-icon://refresh"
                                                press=".onRefreshBatch"
                                                visible="true" />
                                            <Button id="btnSortBatch" 
                                                icon="sap-icon://sort"
                                                press=".onColSort"
                                                visible="true" />
                                            <Button id="btnFilterBatch" 
                                                icon="sap-icon://filter"
                                                press=".onColFilter"
                                                visible="true" />
                                            <Button id="btnFullScreenBatch" 
                                                icon="sap-icon://full-screen"
                                                press="onTableResize('Attr','Max')"
                                                visible="true" />
                                            <Button id="btnExitFullScreenBatch" 
                                                icon="sap-icon://exit-full-screen"
                                                press="onTableResize('Attr','Min')"
                                                visible="false" />
                                            <Button id="btnColPropBatch" 
                                                icon="sap-icon://table-column"
                                                press="onColumnProp"
                                                tooltip="Columns"
                                                visible="true" />                                                
                                        </Toolbar>
                                    </uiT:extension>
                                </uiT:Table>
                            </IconTabFilter>
                            <IconTabFilter text="Custom Info">
                                <uiT:Table id="customInfoTab"
                                    rows="{customInfo>/results}"
                                    visibleRowCountMode="Auto"
                                    showColumnVisibilityMenu="true"
                                    enableColumnFreeze="true"
                                    enableCellFilter="true"
                                    selectionMode="Single"
                                    sort="onSorted">
                                    <uiT:extension>
                                        <Toolbar>
                                            <Text text="Material No: {ui>/activeMaterialNo}" class="selHdrKeyFontStyle" />
                                            <ToolbarSpacer/>
                                            <SearchField
                                                id="searchFieldCustomInfo"
                                                placeholder="Filter"
                                                value=""
                                                search="filterGlobally"
                                                width="15rem"/>
                                            <ToolbarSeparator/>
                                            <Button id="btnEditCustomInfo" 
                                                icon="sap-icon://edit"
                                                press="onEditCustomInfo"
                                                tooltip="Edit"
                                                visible="true"/>
                                            <Button id="btnSaveCustomInfo" 
                                                icon="sap-icon://save"
                                                press=".onSaveCustomInfo()" 
                                                visible="false" />
                                            <Button id="btnCancelCustomInfo" 
                                                icon="sap-icon://sys-cancel"
                                                press="onCancelCustomInfo()" 
                                                visible="false" /> 
                                            <Button id="btnDeleteCustomInfo" 
                                                icon="sap-icon://delete"
                                                press="onDeleteCustomInfo"
                                                visible="true"/>
                                            <Button id="btnRefreshCustomInfo" 
                                                icon="sap-icon://refresh"
                                                press=".onRefreshCustomInfo"
                                                visible="true" />
                                            <Button id="btnSortCustomInfo" 
                                                icon="sap-icon://sort"
                                                press=".onColSort"
                                                visible="true" />
                                            <Button id="btnFilterCustomInfo" 
                                                icon="sap-icon://filter"
                                                press=".onColFilter"
                                                visible="true" />
                                            <Button id="btnFullScreenCustomInfo" 
                                                icon="sap-icon://full-screen"
                                                press="onTableResize('Attr','Max')"
                                                visible="true" />
                                            <Button id="btnExitFullScreenCustomInfo" 
                                                icon="sap-icon://exit-full-screen"
                                                press="onTableResize('Attr','Min')"
                                                visible="false" />
                                            <Button id="btnColPropCustomInfo" 
                                                icon="sap-icon://table-column"
                                                press="onColumnProp"
                                                tooltip="Columns"
                                                visible="true" />                                                
                                        </Toolbar>
                                    </uiT:extension>
                                </uiT:Table>
                            </IconTabFilter>
                            <IconTabFilter text="Plant">
                                <uiT:Table id="plantTab"
                                    rows="{plant>/results}"
                                    visibleRowCountMode="Auto"
                                    showColumnVisibilityMenu="true"
                                    enableColumnFreeze="true"
                                    enableCellFilter="true"
                                    selectionMode="Single"
                                    sort="onSorted">
                                    <uiT:extension>
                                        <Toolbar>
                                            <Text text="Material No: {ui>/activeMaterialNo}" class="selHdrKeyFontStyle" />
                                            <ToolbarSpacer/>
                                            <SearchField
                                                id="searchFieldPlant"
                                                placeholder="Filter"
                                                value=""
                                                search="filterGlobally"
                                                width="15rem"/>
                                            <ToolbarSeparator/>
                                            <Button id="btnRefreshPlant" 
                                                icon="sap-icon://refresh"
                                                press=".onRefreshPlant"
                                                visible="true" />
                                            <Button id="btnSortPlant" 
                                                icon="sap-icon://sort"
                                                press=".onColSort"
                                                visible="true" />
                                            <Button id="btnFilterPlant" 
                                                icon="sap-icon://filter"
                                                press=".onColFilter"
                                                visible="true" />
                                            <Button id="btnFullScreenPlant" 
                                                icon="sap-icon://full-screen"
                                                press="onTableResize('Attr','Max')"
                                                visible="true" />
                                            <Button id="btnExitFullScreenPlant" 
                                                icon="sap-icon://exit-full-screen"
                                                press="onTableResize('Attr','Min')"
                                                visible="false" />
                                            <Button id="btnColPropPlant" 
                                                icon="sap-icon://table-column"
                                                press="onColumnProp"
                                                tooltip="Columns"
                                                visible="true" />                                                
                                        </Toolbar>
                                    </uiT:extension>
                                </uiT:Table>
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </uiL:flexContent>
            </uiL:FixFlex>         
        </content>
    </Page>
</mvc:View>
