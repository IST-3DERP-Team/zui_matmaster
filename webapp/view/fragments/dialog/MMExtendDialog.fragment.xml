<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core"
xmlns:f="sap.ui.layout.form" xmlns:uiT="sap.ui.table">
	<Dialog title="{/Title}" draggable= "true" escapeHandler=".onCancelExtendMM" afterClose=".onCancelExtendMM">
		<uiT:Table id="mmExtendTbl"
			class="sapUiTinyMarginBottom sapUiTinyMarginBegin sapUiTinyMarginEnd"
			visibleRowCountMode="Auto"
			showColumnVisibilityMenu="true"
			enableColumnFreeze="true"
			selectionMode="MultiToggle"
			selectionBehavior="Row"
			sort="onSorted">
			<uiT:extension>
				<Toolbar>
					<Text text="Material: {ui>/activeMaterialNo}" class="selHdrKeyFontStyle" />
					<ToolbarSpacer/>
					<Button id="mmInitExtendBtn" 
						icon="sap-icon://save"
						press=".onSaveExtendMaterial" 
						text = "Extend Material"
						visible="true" />
					<Button id="mmCancelExtendBtn" 
						icon="sap-icon://sys-cancel"
						press=".onCancelExtendMM" 
						visible="true" />
					<Button id="mmSaveTblLayout" 
						icon="sap-icon://table-column"
						press=".onSaveTableLayout('vpoAddPRtoPOTbl')"
						tooltip="Columns"
						visible="true" />
				</Toolbar>
			</uiT:extension>
			<uiT:layoutData>
				<FlexItemData growFactor="1" baseSize="0%"/>
			</uiT:layoutData>                        
		</uiT:Table> 
	</Dialog>
</core:FragmentDefinition>